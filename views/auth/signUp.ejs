      <body class="hold-transition register-page">
    <div class="register-box">
      <div class="register-logo">
        <a href="../../index2.html"><b>Houze</b>Chef</a>
      </div>

      <div class="register-box-body" ng-app="SignUpForm" ng-controller="UpController">
        <p class="login-box-msg">Register a new membership</p>
        <form name="SignUp" ng-submit="submitForm(SignUp.$valid)" novalidate>
          <div class="form-group has-feedback" ng-class="{'has-error':SignUp.name.$invalid &&
            SignUp.name.$dirty}">
            <input type="text" class="form-control" placeholder="Full name" ng-model="SignUpForm.name" ng-maxlength="10" name="name" required>
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
            <span class="help-block has-error" ng-cloak ng-if="SignUp.name.$dirty">
              <span ng-show="SignUp.name.$error.required">Name is required.</span>
              <span ng-show="SignUp.name.$error.maxlength">The name cannot be more than 50 characters.</span>
            </span>
          </div>

          <div class="form-group has-feedback" ng-class="{'has-error':SignUp.email.$invalid &&
          SignUp.email.$dirty}">
            <input type="email" name="email" class="form-control" placeholder="Email" ng-model="SignUpForm.email" required>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>  
                  <span class="help-block has-error" ng-cloak ng-if="SignUp.email.$dirty">
                    <span ng-show="SignUp.email.$error.required">Email address is required.</span>
                    <span ng-show="SignUp.email.$error.email">Not a valid email address.</span>
                </span>          
          </div>

          <div class="form-group has-feedback" ng-class="{'has-error':SignUp.password.$invalid &&
                      SignUp.password.$dirty}">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password" ng-minlength="6"  ng-model="SignUpForm.password" 
             required>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span class="help-block has-error" ng-cloak ng-if="SignUp.password.$dirty">
              <span ng-show="SignUp.password.$error.required">Password is required.</span>
              <span ng-show="SignUp.password.$error.minlength">Password must be at least 6 characters.</span>
            </span>
          </div>


          <div class="form-group has-feedback" ng-class="{'has-error':SignUp.confirmPassword.$invalid &&
                      SignUp.confirmPassword.$dirty}" name="confirmPassword">
            <input type="password" class="form-control" placeholder="Retype password" ng-model="SignUpForm.confirmPassword"  required>
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
             <span class="help-block has-error" ng-cloak ng-if="SignUp.confirmPassword.$dirty">
              <span ng-show="SignUp.password.$error.compareTo">Password must match.</span>
              <span ng-show="SignUp.confirmPassword.$error.required">Confirmation password is required.</span>
            </span>
          </div>


          <div class="row">
            <div class="col-xs-8">
              <div class="checkbox icheck">
                <label>
                  <input type="checkbox"> I agree to the <a href="#">terms</a>
                </label>
              </div>
            </div><!-- /.col -->
            <div class="col-xs-4">
              <button type="submit" class="btn btn-primary btn-block btn-flat" ng-disabled="SignUp.$invalid">
               <span ng-show="!loading">Register</span>
              <span class="overlord-loading-spinner fa fa-spinner" ng-show="loading" ></span>
              <span ng-show="loading">Loading...</span>

              </button>
            </div><!-- /.col -->
          </div>
        </form>

        <div class="social-auth-links text-center">
          <p>- OR -</p>
          <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using Facebook</a>
          <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign up using Google+</a>
        </div>

        <a href="/auth/login" class="text-center">I already have a membership</a>
      </div><!-- /.form-box -->
    </div><!-- /.register-box -->

